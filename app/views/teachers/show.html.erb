<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Teacher</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to teachers_path, class: button_class(theme: "transparent") do %>
      All Teachers
      <% end %>
      <%= link_to edit_teacher_path(@teacher), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Teacher name:</p>
        <p><%= @teacher.teacher_name %></p>
      </li>
      <li>
        <p class="font-semibold">Teacher dob:</p>
        <p><%= @teacher.teacher_DoB %></p>
      </li>
      <li>
        <p class="font-semibold">Teacher phone:</p>
        <p><%= @teacher.teacher_phone %></p>
      </li>
      <li>
        <p class="font-semibold">Teacher email:</p>
        <p><%= @teacher.teacher_email %></p>
      </li>
      <li>
        <p class="font-semibold">Teacher address:</p>
        <p><%= @teacher.teacher_address %></p>
      </li>
  </ul>
</div>
