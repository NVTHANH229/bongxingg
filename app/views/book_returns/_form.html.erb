<%= form_with(model: book_return) do |form| %>
<% if book_return.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(book_return.errors.count, "error") %> prohibited this book_return from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% book_return.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :book_borrowed_id, class: label_class %>
        <%= form.select :book_borrowed_id, options_from_collection_for_select(
      BookBorrowed.all, 'id', 'borrow_date', selected = book_return.book_borrowed_id), class: label_class %>  
      </div>
  <div class="mb-6">
        <%= form.label :book_id, class: label_class %>
        <%= form.select :book_id, options_from_collection_for_select(
          Book.all, 'id', 'book_name', selected = book_return.book_id), class: label_class %>  
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if book_return.persisted? %>
<%= link_to "Cancel", book_return, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", book_returns_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
